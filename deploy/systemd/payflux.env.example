# Example environment file for PayFlux
# Place at: /etc/payflux/payflux.env

# Required: API key for PayFlux HTTP endpoints
PAYFLUX_API_KEY=your-api-key-here

# Required: Stripe API key for payment intent lookups
STRIPE_API_KEY=sk_live_your_stripe_key_here

# Redis connection
REDIS_ADDR=localhost:6379

# HTTP server
HTTP_ADDR=:8080

# Export configuration
PAYFLUX_EXPORT_MODE=stdout
# PAYFLUX_EXPORT_FILE=/var/log/payflux/events.jsonl

# Rate limiting
PAYFLUX_RATELIMIT_RPS=100
PAYFLUX_RATELIMIT_BURST=500

# Stream retention
PAYFLUX_STREAM_MAXLEN=200000

# Panic handling
PAYFLUX_PANIC_MODE=crash

# Checkout configuration (if using)
PRICE_CENTS=9900
PRODUCT_NAME=PayFlux Early Access
SITE_URL=https://payflux.dev
