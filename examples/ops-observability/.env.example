# Ops Observability Environment Configuration
# Copy this file to .env and customize

# Grafana admin password (REQUIRED - change this!)
GF_ADMIN_PASSWORD=CHANGE_ME_BEFORE_USE

# Grafana admin username (optional)
GF_ADMIN_USER=admin

# PayFlux configuration (optional overrides)
PAYFLUX_API_KEY=ops-observability-key
PAYFLUX_TIER=tier2
PAYFLUX_PILOT_MODE=true

# Stripe API key placeholder
# NOTE: Stripe key is optional for this observability demo.
# It is only used for Stripe integration paths, not for metrics.
# The default placeholder satisfies PayFlux's format requirement (sk_*).
# Replace with a real key only if testing Stripe integration.
STRIPE_API_KEY=sk_test_ops_demo_placeholder
